generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SchedulingStatus {
  agendado
  realizado
  cancelado
}

model Student {
  id           String   @id @default(uuid())
  cpf          String   @unique
  firstName    String
  lastName     String
  birthDate    DateTime @db.Date
  cep          String
  street       String
  number       String
  neighborhood String
  city         String
  state        String
  phone        String
  whatsapp     String
  email        String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  Scheduling Scheduling[]
}

model Teacher {
  id        String   @id @default(uuid())
  cpf       String   @unique
  firstName String
  lastName  String
  birthDate DateTime @db.Date
  status    String
  expertise String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Scheduling Scheduling[]
}

model Scheduling {
  id        String           @id @default(uuid())
  dateTime  DateTime
  teacherId String
  studentId String
  content   String
  status    SchedulingStatus
  teacher   Teacher          @relation(fields: [teacherId], references: [id])
  student   Student          @relation(fields: [studentId], references: [id])
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}
